{
    "extends": "@yotsubacy/config/typescript.json",
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "strict": true,
        "jsx": "react-jsxdev"
    },
    "include": ["./src", "./types", "./plugins", "./*.ts"]
}
